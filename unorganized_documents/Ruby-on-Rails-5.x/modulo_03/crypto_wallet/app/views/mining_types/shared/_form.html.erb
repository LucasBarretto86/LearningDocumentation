<%= form_with model: mining_type, class: "form" do |form| %>
  <div id="<% dom_id mining_type %>">
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :acronym %>
      <%= form.text_field :acronym %>
    </div>

    <div class="actions">
      <%= form.submit "Save", class: "btn btn-medium btn--accept" %>
    </div>
  </div>
<% end %>
